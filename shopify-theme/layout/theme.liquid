<!doctype html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">

  <title>{{ page_title }}{% if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif %}{% if current_page != 1 %} &ndash; Page {{ current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}</title>

  {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}">
  {% endif %}

  <link rel="canonical" href="{{ canonical_url }}">

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800&display=swap" rel="stylesheet">

  {{ content_for_header }}

  <link rel="stylesheet" href="{{ 'styles.css' | asset_url }}">

  <script src="{{ 'script.js' | asset_url }}" defer></script>
</head>

<body>
  <!-- HEADER -->
  <header class="header">
    <div class="container">
      <div class="header-content">
        <a href="/" class="logo">{{ shop.name }}</a>

        <nav class="nav">
          <a href="/#products" class="nav-link">Products</a>
          <a href="/#packages" class="nav-link">Packages</a>
          <a href="/#testimonials" class="nav-link">Testimonials</a>
          <a href="/#faq" class="nav-link">FAQ</a>
          <a href="/pages/support#contact" class="nav-link">Contact</a>
        </nav>

        <div class="header-icons">
          <button class="icon-btn" aria-label="Search">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="11" cy="11" r="8"/>
              <path d="m21 21-4.35-4.35"/>
            </svg>
          </button>
          <a href="/account" class="icon-btn" aria-label="Account">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
              <circle cx="12" cy="7" r="4"/>
            </svg>
          </a>
          <a href="/cart" class="icon-btn" aria-label="Cart">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="9" cy="21" r="1"/>
              <circle cx="20" cy="21" r="1"/>
              <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
            </svg>
            {% if cart.item_count > 0 %}
              <span class="cart-count">{{ cart.item_count }}</span>
            {% endif %}
          </a>
          <button class="menu-toggle icon-btn" aria-label="Menu">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="3" y1="12" x2="21" y2="12"/>
              <line x1="3" y1="6" x2="21" y2="6"/>
              <line x1="3" y1="18" x2="21" y2="18"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </header>

  <!-- MAIN CONTENT -->
  <main role="main">
    {{ content_for_layout }}
  </main>

  <!-- FOOTER -->
  <footer class="footer">
    <div class="container">
      <div class="footer-content">
        <div class="footer-section">
          <h3>{{ shop.name }}</h3>
          <p>Premium wireless headset equipment from Bali's largest rental business. Bringing the magic of wireless headsets to events worldwide.</p>

          <div style="margin-top: 1.5rem;">
            <h3>Subscribe to Our Newsletter</h3>
            <form class="newsletter-form" action="/contact#contact_form" method="post">
              <input type="hidden" name="form_type" value="customer">
              <input type="hidden" name="utf8" value="âœ“">
              <input type="hidden" name="contact[tags]" value="newsletter">
              <input type="email" name="contact[email]" class="newsletter-input" placeholder="Your email address" required>
              <button type="submit" class="newsletter-btn">Subscribe</button>
            </form>
          </div>
        </div>

        <div class="footer-section">
          <h3>Shop</h3>
          <ul class="footer-links">
            <li><a href="/collections/all">All Products</a></li>
            <li><a href="/#packages">Packages</a></li>
          </ul>
        </div>

        <div class="footer-section">
          <h3>Support</h3>
          <ul class="footer-links">
            <li><a href="/pages/support#faq">FAQ</a></li>
            <li><a href="/pages/support#shipping">Shipping Info</a></li>
            <li><a href="/pages/support#returns">Returns</a></li>
            <li><a href="/pages/support#warranty">Warranty</a></li>
            <li><a href="/pages/support#contact">Contact Us</a></li>
          </ul>
        </div>

        <div class="footer-section">
          <h3>Company</h3>
          <ul class="footer-links">
            <li><a href="/pages/about">About Us</a></li>
            <li><a href="/pages/legal#privacy">Privacy Policy</a></li>
            <li><a href="/pages/legal#terms">Terms of Service</a></li>
          </ul>
        </div>
      </div>

      <div class="footer-bottom">
        <div>
          <p style="color: rgba(255,255,255,0.6); font-size: 0.9rem;">
            &copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. All rights reserved.
          </p>
        </div>
        <div class="payment-icons">
          {% for type in shop.enabled_payment_types %}
            {{ type | payment_type_svg_tag: class: 'payment-icon' }}
          {% endfor %}
        </div>
      </div>
    </div>
  </footer>
</body>
</html>
